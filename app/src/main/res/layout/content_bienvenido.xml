<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Bienvenido"
    tools:showIn="@layout/app_bar_bienvenido">



        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Bienvenido_3" />


        <android.support.v7.widget.CardView
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:id="@+id/imgExpandable"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_below="@+id/imgExpandable"
                    android:id="@+id/btnPickUpRequest"
                    android:text="Solicitar Taxi"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_iniciar_sesion"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                
                
            </RelativeLayout>



        </android.support.v7.widget.CardView>
 </RelativeLayout>





