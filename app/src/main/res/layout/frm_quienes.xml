<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="¿Quienes Somos?"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorSecondary"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Somos estudiantes de la carrera de Ingeniería en Sistemas de la Universidad Nacional de Loja buscando mejorar nuestras habilidades en la programación para así aportar a la sociedad mejorando su calidad de vida."
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorSecondary"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Copyright UNL"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorSecondary"
            />


    </LinearLayout>


</android.support.v7.widget.CardView>