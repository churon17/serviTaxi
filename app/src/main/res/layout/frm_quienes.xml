<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/qs_img1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/qs_1j"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Jean Carlos Alarcón"
            android:layout_toRightOf="@id/qs_img1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorSecondary"
            />

        <ImageView
            android:id="@+id/qs_img2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@id/qs_img1"
            android:src="@drawable/qs_2a"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Andrés Soto"
            android:layout_below="@id/qs_img1"
            android:layout_toRightOf="@id/qs_img2"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorSecondary"
            />

        <TextView
            android:id="@+id/qs_txt1"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qs_img2"
            android:layout_gravity="left"
            android:text="¿Quienes Somos?"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorSecondary"
            />
        <TextView
            android:id="@+id/qs_txt2"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/qs_txt1"
            android:layout_gravity="left"
            android:text="Somos estudiantes de la carrera de Ingeniería en Sistemas de la Universidad Nacional de Loja buscando mejorar nuestras habilidades en la programación para así aportar a la sociedad mejorando su calidad de vida."
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorSecondary"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/qs_txt2"
            android:layout_gravity="left"
            android:text="Copyright UNL"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorSecondary"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>